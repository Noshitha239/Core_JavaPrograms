			int choice = sc.nextInt();
			switch(choice) {
			case 1:{
				System.out.println("You are selected Corpet1..Thank you for Purchasing");
				break;
			}
			case 2:{
				System.out.println("You are selected Corpet2..Thank you for Purchasing");
				break;
			}
			case 3:{
				
				System.exit(0);
			}
			
			default:
				System.out.println("");
				
			}
			System.exit(0);
	}
	
	public static void Kitchen() {
		Scanner sc=new Scanner(System.in);   
			System.out.println();
			
			System.out.println("Welcome to Kitchen Decors..Please select the option what you want:\n"
					+"1. K1\n"
					+"2. k2");
			System.out.println("Choose your choice: ");
			int choice = sc.nextInt();
			switch(choice) {
			case 1:{
				System.out.println("You are selected K1..Thank you for Purchasing");
				break;
			}
			case 2:{
				System.out.println("You are selected k2..Thank you for Purchasing");
				break;
			}
			case 3:{
				
				System.exit(0);
			}
			
			default:
				System.out.println("");
				
			}
			System.exit(0);
	}
	
	
}
