	public static void Ops() {
		Scanner sc=new Scanner(System.in);
		int choice = sc.nextInt();
		switch(choice) {
		case 1:{
			System.out.println("Welcome to Furnitures..Please select the option what you want:\n"
					+"1.Sofa \n"
					+"2.chairs");
			System.out.println("Choose your choice: ");
			Options();
			
			break;
		}
		case 2:{
			System.out.println("Welcome to blankets..Please select what you want:\n"
					+"1. Blanket1\n"
					+"2. blanket2");
			O1();
			break;
		}
		case 3:{
			System.out.println("welcome to Corpets..Please select what you want:\n"
						+"1. C1\n"
						+"2. C2");
			O3();
			break;
		}
		case 4:{
			System.out.println("welcome to Kitchen Decors..Please select what you want:\n"
					+"1. K1\n"
					+"2. K2");
			O2();
			break;
		}
		
		case 5:{
			System.out.println("Thank you");
			System.exit(0);
		}
		case 6:{
			main(null);
		}
		default:
			System.out.println("");
			main(null);

		}
	    main(null);
		
	}
	
	
	
	
	//This is method for Furnitures
	public static void Options() {
		Scanner sc=new Scanner(System.in);   
			System.out.println();
			
			System.out.println("Welcome to Furnitures..Please select the option what you want:\n"
					+"1. Sofas\n"
					+"2. Chairs");
			System.out.println("Choose your choice: ");
			int choice = sc.nextInt();
			switch(choice) {
			case 1:{
				System.out.println("You are selected Sofa..Thank you for Purchasing");
				break;
			}
			case 2:{
				System.out.println("You are selected Chairs..Thank you for Purchasing");
				break;
			}
			case 3:{
				
				System.exit(0);
			}
			case 4:{
				main(null);
			}
			default:
				System.out.println("");
				main(null);

			}	
	}
